<Window x:Class="PostavkaTovarov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostavkaTovarov"
        mc:Ignorable="d"
        Title="Главная" Height="550" Width="590"
        MinHeight="490" MinWidth="490" MaxHeight="650" MaxWidth="690">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="311*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Margin="100,40,0,0"
            FontWeight="Bold"
            FontSize="30"
            Text="Postavka Tovarov"/>
        <Image
            Height="90"
            HorizontalAlignment="Left"
            Source = "/resource/logo.png"/>
        <Image
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Opacity="0.5"
            Grid.Row="1"
            Height="290"
            Source = "/resource/logo.png"/>
        <Grid
            Background="#FAEBD7"
            Grid.Row="2"/>
        <Frame
            Name="frmMain"
            NavigationUIVisibility="Hidden"
            Grid.Row="1"/>
    </Grid>
</Window>
